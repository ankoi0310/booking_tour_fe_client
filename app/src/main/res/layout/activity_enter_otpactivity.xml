<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.activity.EnterOTPActivity">

    <include
        android:id="@+id/appBar"
        layout="@layout/fragment_custom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:text="Nhập OTP đã được gửi đến mail của bạn"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/otpField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padding_16"
            app:layout_constraintTop_toBottomOf="@id/appBar">

            <EditText
                android:id="@+id/editTextOTP1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/editTextOTP2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/editTextOTP3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/editTextOTP4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/editTextOTP5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/editTextOTP6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:minHeight="48dp"
                android:paddingHorizontal="12dp"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
