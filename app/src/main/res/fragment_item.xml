<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_margin="3dp"
        android:orientation="horizontal">
        <!-- ImageView -->
        <ImageView
            android:id="@+id/imageViewIcon1"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/border_black2"
            android:src="" />


        <!-- TextView -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_black1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewContent1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Text 1" />

                <TextView
                    android:id="@+id/textViewContent1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_start"
                    android:drawablePadding="3dp"
                    android:padding="3dp"
                    android:text="Text 2" />

                <TextView
                    android:id="@+id/textViewContent1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_nonemap"
                    android:drawablePadding="3dp"
                    android:padding="3dp"
                    android:text="Text 3" />

                <TextView
                    android:id="@+id/textViewContent1_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Text 4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="end"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/iconButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="10dp"
                    android:src="@drawable/ic_save" />

                <TextView
                    android:id="@+id/textViewIcon1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/border_fillorange"
                    android:padding="3dp"
                    android:text="  Đặt ngay" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>