<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailHotel.DetailHotel">

    <fragment
        android:id="@+id/header_title"
        class="vn.edu.hcmuaf.fit.travie.detailHotel.FragmentHoDe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_ho_de1">
    </fragment>

    <fragment
        android:id="@+id/detail"
        class="vn.edu.hcmuaf.fit.travie.detailHotel.FragmentHoDe2"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:layout="@layout/fragment_ho_de2">
    </fragment>

    <fragment
        android:id="@+id/choose"
        class="vn.edu.hcmuaf.fit.travie.detailHotel.FragmentHoDe3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        tools:layout="@layout/fragment_ho_de3">
    </fragment>

</FrameLayout>