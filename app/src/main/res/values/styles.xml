<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Form">
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">36dp</item>
    </style>

    <style name="FormLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_form_rectangle</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="FormSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/bg_form_rectangle</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="ButtonFilled" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@drawable/bg_btn_fill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>