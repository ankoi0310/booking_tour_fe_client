<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Travie" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>

        <!-- Optional: set to transparent if your app is drawing behind the status bar. -->
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>

        <!-- Optional: set for a light status bar with dark content. -->
        <item name="android:windowLightStatusBar">
            true
        </item>
    </style>

    <style name="Theme.Travie" parent="Base.Theme.Travie" />

    <style name="Theme.Travie.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/travie_splash_screen_icon</item>

        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.Travie</item>
    </style>

    <style name="Theme.Travie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Travie.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Travie.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>