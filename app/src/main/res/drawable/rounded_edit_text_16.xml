<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- create rounded background for edit text -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:color="@color/material_on_surface_emphasis_high_type" android:width="1dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke android:color="@color/material_on_surface_emphasis_high_type" android:width="2dp" />
        </shape>
    </item>
</selector>